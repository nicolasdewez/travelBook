    <p><strong>{{ 'home.sub_title'|trans }}</strong></p>

    <div class="col-md-4">

        <div class="panel panel-primary">
            <div class="panel-heading"><strong>{{ 'home.registration_title'|trans }}</strong></div>

            <div class="panel-body">
                <p>{{ 'home.registration_body_1'|trans }} <a href="{{ path('app_registration') }}">{{ 'home.registration_body_2'|trans }}</a></p>
