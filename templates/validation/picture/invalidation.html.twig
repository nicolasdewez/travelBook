{% extends 'base.html.twig' %}

{% block body %}
    <h2>{{ 'validation.pictures.invalidation.title'|trans }}</h2>

    <div class="mini-body">

        <img src="{{ asset('data/pictures/' ~ picture.name) }}" />

        <br><br>

        {{ form_start(form) }}
        {{ form_widget(form) }}

        {% if workflow_can(picture, 'validation') %}
            <a href="{{ path('app_validation_pictures_validation', { 'id': picture.id, 'redirect': redirect }) }}" class="btn btn-primary pull-left">{{ 'form.validation.pictures.invalidation.validate'|trans }}</a>
        {% endif %}

        <input type="submit" value="{{ 'form.validation.pictures.invalidation.invalidate'|trans }}" class="btn btn-primary pull-right" />
        {{ form_end(form) }}
    </div>
{% endblock %}
